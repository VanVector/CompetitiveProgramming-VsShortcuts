      <Title>dsu</Title>
      <Author>Van</Author>
      <Description>Disjoint set union.</Description>
      <HelpUrl>
      </HelpUrl>
      <Shortcut>dsu</Shortcut>
    </Header>
    <Snippet>
      <Code Language="cpp" Delimiter="$" Kind="method decl"><![CDATA[#pragma region DSU
int parent[MAX] = { 0 };
int rnk[MAX] = { 0 };

void makeSet(int v) {
    parent[v] = v;
    rnk[v] = 0;
}

int findSet(int v) {
    if (v == parent[v])
        return v;
    return parent[v] = findSet(parent[v]);
}

void unionSets(int a, int b) {
    a = findSet(a);
    b = findSet(b);
    if (a != b) {
        if (rnk[a] < rnk[b])
            swap(a, b);
        parent[b] = a;
        if (rnk[a] == rnk[b])
            ++rnk[a];
    }
}
#pragma endregion DSU
$end$]]></Code>
